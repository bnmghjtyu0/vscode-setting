{
  ///////////////////////   編輯器設定   ///////////////////////

  //   擴充套件 [擴充建議是否忽略]
  "extensions.ignoreRecommendations": true,

  //   explorer [托放移動資料夾]
  "explorer.confirmDragAndDrop": false,

  //   terminal [字型(需下載 Fira Code))]
  //   下載 Fira Code: https://github.com/bnmghjtyu0/vscode-setting/raw/master/FiraCode_1.204.zip
  "terminal.integrated.fontFamily": "Fira Code",

  //   prettier [程式碼寬度、單引號、結尾分號]
  "prettier.printWidth": 180,
  "prettier.singleQuote": true,
  "prettier.semi": false,

  //   files [文件關聯]
  "files.associations": {
    "*.vue": "vue"
  },

  //   editor [字型、文字大小、行高、...迷你地圖、連字 =>、儲存立即格式化、tabs空格數量、略、略、略、略]
  "editor.fontFamily": "Fira Code",
  "editor.fontSize": 13,
  "editor.lineHeight": 20,
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 80,
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.codeLens": true,
  "editor.renderWhitespace": "boundary",
  "editor.cursorBlinking": "smooth",
  "editor.snippetSuggestions": "top",

  // 視窗 [視窗縮放、標題:路徑]
  "window.zoomLevel": 0,
  "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",

  // 工作區 [主題、icon、sideBar位置]
  "workbench.colorTheme": "Atom One Dark",
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.sideBar.location": "left",

  ///////////////////////   個人寫作風格   ///////////////////////

  // eslint 程式碼風格 [自動修復錯誤、設定、驗證]
  "eslint.autoFixOnSave": true,
  "eslint.options": {
    "extensions": [".js", ".vue"],
    "plugins": ["html"]
  },
  "eslint.validate": ["javascript", "javascriptreact", "vue", "html"],

  //   git
  "git.confirmSync": false,

  //   emmet
  "emmet.triggerExpansionOnTab": false,
  "emmet.syntaxProfiles": {
    "javascript": "jsx",
    "vue": "html",
    "vue-html": "html"
  },

  //   vue擴充套件 [...vetur]
  "vetur.validation.template": false,
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  "vetur.format.defaultFormatterOptions": {
    "js-beautify-html": {
      "wrap_attributes": "force"
    }
  }

  ///////////////////////  常用擴充套件   ///////////////////////
  // - Atom One Dark Theme 主題
  // - Auto Close Tag 自動新增結尾標籤
  // - AutoFileName 提示相關的檔案名稱與路徑
  // - cdnjs 快速下載 cdnjs
  // - Code Spell Checker
  // - Escape HTML code *HTML轉碼 (<pre><code> &lt;p&gt;123&lt;/p&gt;</code></pre>))
  // - ESLint *寫作風格
  // - Git History *
  // - GitLens
  // - heightlight-matching-tag
  // - indent-rainbow
  // - lit-html *高亮 backtick 內的 html
  // - Live Server
  // - Polacode *程式碼輸出圖片
  // - Pug beautify
  // - SCSS IntelliSense
  // - SCSS Refactoring
  // - Prettier *美化程式碼
  // - Vetur    *Vue套件
  // - vscode-spotify *聽音樂
}
